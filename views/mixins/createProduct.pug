mixin createProduct(product)
    .col-md-4
        .card.my-3
            img(src=`/img/${product.imageUrl}` alt=`${product.description}`).card-img-top
            .card-body
                h4.card-title
                    a(href=`/products/${product.id}`) #{product.name}
                            
                p.card-text.pt-2 #{product.description} 

                small.text-muted
                    i.fas.fa-lira-sign  #{product.price}
                        
            .card-footer

                a(href=`/products/${product.id}`).btn.btn-outline-primary.btn-sm Detail

                a(href="#").btn.btn-outline-primary.btn-sm.ml-3 Add to Cart